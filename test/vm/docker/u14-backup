# Ubuntu 14.04 Backup Container
FROM vagrant/u14-base

# Create backrest user
RUN adduser --home /var/lib/backrest --disabled-password --gecos "" backrest

# Setup SSH
RUN mkdir -p /var/lib/backrest/.ssh
RUN cp /root/resource/.ssh/* /var/lib/backrest/.ssh
RUN chown -R backrest:backrest /var/lib/backrest
